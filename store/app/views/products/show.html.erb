<% title @product.name %>

<%= simple_format h(@product.description) %>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @product.price %>
</p>

<% admin_area do %>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
